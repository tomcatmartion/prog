/* pages/order/detail/detail.wxss */
@import "../../../styles/theme.wxss";

.container {
  background-color: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 订单状态 */
.status-bar {
  background-color: #FF5722;
  color: #ffffff;
  padding: 40rpx 30rpx;
  text-align: center;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.order-number {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 公共section样式 */
.section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #FF5722;
  padding-left: 16rpx;
}

/* 桌位信息 */
.table-info {
  display: flex;
  flex-direction: column;
}

.table-content {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

.table-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.table-code {
  font-size: 28rpx;
  color: #666;
}

/* 订单信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #666666;
  flex: 0 0 180rpx;
}

.info-value {
  color: #333333;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

/* 菜品列表 */
.dish-list {
  background-color: #ffffff;
}

.dish-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.dish-item:last-child {
  border-bottom: none;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.dish-spec {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 10rpx;
}

.dish-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 32rpx;
  color: #FF5722;
}

.dish-count {
  font-size: 28rpx;
  color: #999999;
}

/* 金额信息 */
.amount-info {
  padding: 30rpx;
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
}

.amount-row .price {
  font-size: 40rpx;
  font-weight: bold;
}

.price {
  color: #FF5722;
  font-weight: bold;
}

/* 底部操作区 */
.bottom-actions {
  display: flex;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin: 0 10rpx;
  font-size: 30rpx;
}

.cancel {
  background-color: #f5f5f5;
  color: #666666;
}

.pay {
  background-color: #FF5722;
  color: #ffffff;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f8f8f8;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.safe-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
} 