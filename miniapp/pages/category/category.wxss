/* pages/category/category.wxss */
@import "../../styles/theme.wxss";

page {
  height: 100%;
  background-color: #f7f7f7;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
}

/* 桌号信息样式 */
.table-info {
  background-color: #fff;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #f0f0f0;
}

.table-id {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 顶部工具栏样式 */
.toolbar {
  padding: 15rpx 20rpx;
  background-color: #ffffff;
  position: relative;
  z-index: 10;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.back-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 20rpx;
  background-color: var(--primary-color, #07c160);
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
  width: fit-content;
}

/* 菜单容器样式 */
.menu-container {
  display: flex;
  height: calc(100% - 100rpx);
  width: 100%;
  overflow: hidden;
}

.category-list {
  width: 180rpx;
  height: 100%;
  background-color: #f8f8f8;
}

.category-item {
  padding: 30rpx 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
  border-bottom: 1rpx solid #eee;
}

.category-item.active {
  background-color: #fff;
  color: var(--primary-color, #07c160);
  font-weight: bold;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 30%;
  height: 40%;
  width: 8rpx;
  background-color: var(--primary-color, #07c160);
  border-radius: 0 4rpx 4rpx 0;
}

.category-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-list {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding: 0 20rpx;
}

.dish-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.dish-price-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.dish-price::before {
  content: '¥';
  font-size: 24rpx;
}

.dish-add {
  width: 50rpx;
  height: 50rpx;
  background-color: var(--primary-color, #07c160);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
}

.add-icon {
  line-height: 44rpx;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid var(--primary-color, #07c160);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部安全区域 */
.safe-bottom-area {
  height: 140rpx;
}