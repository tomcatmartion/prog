/* pages/category/category.wxss */
@import "../../styles/theme.wxss";

page {
  height: 100%;
  background-color: #f7f7f7;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
}

/* 桌号信息样式 */
.table-info {
  padding: 10rpx 30rpx;
  background-color: #FFF1E6;
  border-bottom: 1px solid #FFE4CA;
}

.table-id {
  font-size: 28rpx;
  color: #FF7240;
  text-align: center;
}

/* 顶部工具栏样式 */
.toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.back-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 6rpx;
}

/* 菜单容器样式 */
.menu-container {
  display: flex;
  width: 100%;
  height: calc(100vh - 200rpx);
  overflow: hidden;
  background-color: #f6f6f6;
}

.category-list {
  width: 200rpx;
  height: 100%;
  background-color: #f8f8f8;
}

.category-item {
  padding: 30rpx 20rpx;
  text-align: center;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}

.category-item.active {
  background-color: #fff;
  color: #FF7240;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 30%;
  height: 40%;
  width: 8rpx;
  background-color: #FF7240;
}

.category-name {
  font-size: 28rpx;
  line-height: 1.4;
  word-break: break-all;
}

.dish-list {
  flex: 1;
  height: 100%;
  background-color: #fff;
  padding: 0 20rpx;
}

.dish-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.dish-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

.dish-info {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.dish-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  line-height: 1.4;
  flex: 1;
}

.dish-price-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.dish-price {
  font-size: 36rpx;
  color: #FF7240;
  font-weight: bold;
}

.dish-price::before {
  content: '¥';
  font-size: 28rpx;
  margin-right: 4rpx;
}

.dish-add {
  width: 50rpx;
  height: 50rpx;
  background-color: #FF7240;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.add-cart-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 加载状态样式 */
.loading {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF7240;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态样式 */
.empty-state {
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部安全区域 */
.safe-bottom-area {
  height: 120rpx;
}

/* 规格选择对话框 */
.spec-dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.spec-dialog {
  width: 100%;
  background-color: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 30rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.spec-dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.spec-dialog-title {
  font-size: 34rpx;
  font-weight: bold;
}

.spec-dialog-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.spec-dialog-content {
  flex: 1;
  overflow-y: auto;
}

.spec-dialog-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.spec-list {
  display: flex;
  flex-direction: column;
}

.spec-item {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.spec-item.active {
  background-color: #FFF1E6;
  border-color: #FF7240;
  color: #FF7240;
}

.spec-name {
  font-size: 28rpx;
  font-weight: 500;
}

.spec-price {
  font-size: 28rpx;
  color: #FF7240;
  font-weight: bold;
}

.spec-dialog-footer {
  margin-top: 30rpx;
}

.add-cart-btn {
  width: 100%;
  height: 80rpx;
  background-color: #FF7240;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  margin: 0;
  font-weight: bolder;
}