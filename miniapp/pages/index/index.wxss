/* pages/index/index.wxss */
@import "../../styles/theme.wxss";

.container {
  padding: 0 0 120rpx 0; /* 底部留出空间给按钮 */
  background-color: #f6f6f6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: 100%;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weui-loading {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 20rpx;
  display: inline-block;
  vertical-align: middle;
  animation: loading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* 店铺信息 */
.shop-info {
  display: flex;
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

.shop-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-right: 30rpx;
  background-color: #eeeeee;
}

.shop-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.shop-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.shop-slogan {
  font-size: 30rpx;
  color: #666666;
}

/* 店铺描述 */
.shop-description {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 轮播图 */
.banner-wrapper {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.banner {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 桌号扫描区域 */
.scan-area {
  width: 100%;
  margin-top: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.scan-content {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.scan-status {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.scan-status.scanned {
  color: #FF5722;
  font-weight: 500;
}

/* 桌台号输入区域样式 */
.table-input-area {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx 0;
  width: 100%;
}

.table-input {
  flex: 1;
  height: 80rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
}

.confirm-btn {
  margin-left: 20rpx;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FF5722;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.scan-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FF5722;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* 底部固定的去点餐按钮 */
.go-order-btn-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx 40rpx;
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.go-order-btn {
  background-color: var(--primary-color);
  color: #ffffff !important; /* 强制使用白色字体 */
  font-size: 34rpx;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  width: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-text {
  color: #ffffff;
  font-size: 34rpx;
  font-weight: bold;
}

.go-order-btn-disabled {
  background-color: #cccccc;
  opacity: 0.7;
  pointer-events: none;
}

.go-order-btn-disabled .btn-text {
  color: #ffffff;
}

.btn-hover {
  background-color: var(--primary-color-dark) !important;
  color: #ffffff !important;
  opacity: 0.9;
}

/* 推荐菜品 */
.recommend-section {
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.dish-scroll {
  width: 100%;
}

.dish-list {
  display: flex;
  padding: 10rpx 0;
}

.dish-item {
  width: 220rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f9f9f9;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 220rpx;
  height: 170rpx;
  background-color: #eeeeee;
}

.dish-info {
  padding: 10rpx;
}

.dish-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 6rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 营业信息 */
.business-info {
  margin: 0 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-bottom: 1px solid #f1f1f1;
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

/* 按钮点击效果 */
.scan-btn:active,
.go-order-btn:active,
.info-item:active {
  opacity: 0.8;
}

/* 兼容暗黑模式 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #232323;
  }
  
  .shop-info,
  .scan-area,
  .recommend-section,
  .business-info,
  .shop-description,
  .shop-info-detail,
  .go-order-btn-wrapper {
    background-color: #333333;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  }
  
  .shop-name {
    color: #ffffff;
  }
  
  .shop-slogan,
  .info-label {
    color: #b0b0b0;
  }
  
  .info-content {
    color: #e0e0e0;
  }
  
  .section-title {
    color: #ffffff;
    border-left-color: var(--primary-color-light);
  }
  
  .scan-status {
    background-color: #444444;
    color: #b0b0b0;
  }
  
  .scan-status.scanned {
    background-color: rgba(255, 87, 34, 0.2);
    color: var(--primary-color-light);
  }
  
  .scan-btn {
    background-color: var(--primary-color);
  }
  
  .go-order-btn {
    background-color: var(--primary-color);
  }
  
  .btn-hover {
    background-color: var(--primary-color-dark) !important;
  }
  
  .info-item {
    border-bottom: 1px solid #444444;
  }
  
  .phone-text {
    color: var(--primary-color-light);
  }
}

/* 店铺基本信息详情 */
.shop-info-detail {
  margin: 0 30rpx 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  padding: 15rpx 0;
  font-size: 28rpx;
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  color: #666666;
  min-width: 160rpx;
  font-weight: bold;
}

.info-content {
  color: #333333;
  flex: 1;
}

.phone-text {
  color: #1890ff;
  text-decoration: underline;
}